# ===========================================
# Neurodirectolog - Environment Variables
# ===========================================

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Authentication
# Generate a secure key: openssl rand -base64 32
# IMPORTANT: Must be at least 32 characters, use a cryptographically secure random string
JWT_SECRET=CHANGE_ME_use_openssl_rand_base64_32

# ===========================================
# ClickHouse Database
# ===========================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_secure_password_here
CLICKHOUSE_DB=neurodirectolog

# ===========================================
# Yandex OAuth / API
# ===========================================
YANDEX_CLIENT_ID=your_yandex_client_id
YANDEX_CLIENT_SECRET=your_yandex_client_secret
YANDEX_REDIRECT_URI=http://localhost:3001/api/yandex/callback

# ===========================================
# OpenAI API (for AI recommendations)
# ===========================================
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Redis (для кеша и distributed locks)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# ===========================================
# Frontend (Vite)
# ===========================================
VITE_API_URL=http://localhost:3001/api

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Production Settings (for deployment)
# ===========================================
# VITE_API_URL=https://your-domain.com/api
# YANDEX_REDIRECT_URI=https://your-domain.com/api/yandex/callback
# CORS_ORIGIN=https://your-domain.com
